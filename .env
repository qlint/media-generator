# ========= LLM (Planner + Step Rewriter) =========
LLM_MODEL=phi4-mini:3.8b
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=2048
LLM_BATCH_STEPS=20

# ========= Image Generation (SDXL) =========
DEVICE=cuda
SDXL_MODEL=stabilityai/stable-diffusion-xl-base-1.0
IMAGE_WIDTH=1024
IMAGE_HEIGHT=1024
IMAGE_STEPS=30
IMAGE_GUIDANCE=6.5

# ========= Video Generation (LTX-Video Text-to-Video) =========
VIDEO_MODEL=Lightricks/LTX-Video
VIDEO_FPS=24
VIDEO_BASE_WIDTH=1216
VIDEO_BASE_HEIGHT=704
VIDEO_SEGMENT_SECONDS=6
VIDEO_INFERENCE_STEPS=40
VIDEO_GUIDANCE=5.0
VIDEO_UPSCALE_TO_1080P=true
ENABLE_CPU_OFFLOAD=false

# ========= Planning rules / defaults =========
VIDEO_TARGET_SECONDS_DEFAULT=12
VIDEO_MAX_SHOTS_PER_STEP=3

# ========= Housekeeping =========
KEEP_INTERMEDIATE=false
